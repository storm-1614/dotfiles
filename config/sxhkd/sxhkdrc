#
#super + F5
#	playerctl -a next
#
#super + alt + Return
#	~/.config/bspwm/slop.sh
#
# hide window
super + v
  bspc node -g hidden

#Volume Control
XF86AudioLowerVolume
	pulseaudio-ctl down 5
XF86AudioRaiseVolume
	pulseaudio-ctl up 5
XF86AudioMute
	pulseaudio-ctl mute    

# Brightness Control
XF86MonBrightnessDown
	light -U 5
XF86MonBrightnessUp
	light -A 5

# Player Control
XF86AudioPlay
	playerctl --player=cmus play-pause
XF86AudioNext
	playerctl --player=cmus next
XF86AudioPrev
	playerctl --player=cmus previous
